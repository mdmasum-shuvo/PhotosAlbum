<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#00CAF4"/>
            <stroke
                android:width="2dp"
                android:color="#00CAF4"/>
            <corners
                android:radius="6dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <corners
                android:radius="10dp"/>
            <gradient
                android:angle="270"
                android:endColor="#00CAF4"
                android:startColor="#00CAF4"/>
            <stroke
                android:width="4dp"
                android:color="#00CAF4"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>